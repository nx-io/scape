<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://toolkit.alibaba-inc.com/dtd/log4j/log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" threshold="null" debug="null">

	<appender name="PROJECT" class="me.ocs.commons.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/scape-api.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%n%d [%X{loginUserNick}@%X{remoteAddr} - %X{sessionId} - %X{requestURIWithQueryString}] %nUserAgent: %X{userAgent}%nReferrer: %X{referrer}%nMessage: %X{message}%n%-5p %c{2} - %m%n" />
		</layout>
	</appender>

	<appender name="TI-FW-Appender" class="me.ocs.commons.log4j.DailyRollingFileAppender">
		<param name="file" value="${loggingRoot}/scape-fw.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p - %m%n" />
		</layout>
	</appender>

	<logger name="org.apache" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="TI-FW-Appender" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="TI-FW-Appender" />
	</logger>
	<logger name="me.scape.ti" additivity="false">
		<level value="${loggingLevel}" />
		<appender-ref ref="PROJECT" />
	</logger>
	<root>
		<level value="${loggingLevel}" />
		<appender-ref ref="PROJECT" />
	</root>
</log4j:configuration>