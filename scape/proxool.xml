<?xml version="1.0" encoding="UTF-8"?>
<something-else-entirely>
	<proxool>
		<alias>scape_proxool</alias>
		<driver-url>jdbc:mysql://scape_mysql_master:3306/scape?useUnicode=true&amp;characterEncoding=utf-8&amp;zeroDateTimeBehavior=convertToNull&amp;autoReconnect=true</driver-url>
		<driver-class>com.mysql.jdbc.Driver</driver-class>
		<driver-properties>
			<property name="user" value="root" />
			<property name="password" value="lF0130lf" />
		</driver-properties>
		<!-- proxool自动侦查各个连接状态的时间间隔（毫秒），侦查到空闲的连接就马上 回收，超时的销毁 -->
		<house-keeping-sleep-time>900000</house-keeping-sleep-time>
		<!-- 最大连接数 -->
		<maximum-connection-count>10</maximum-connection-count>
		<!-- 最小连接数 -->
		<minimum-connection-count>3</minimum-connection-count>
		<!--连接池中可用的连接数量.如果当前的连接池中的连接少于这个数值.新的连接将被建立 -->
		<prototype-count>3</prototype-count>
		<!-- 可一次建立的最大连接数。那就是新增的连接请求,但还没有可供使用的连接，默认为10 -->
		<simultaneous-build-throttle>4</simultaneous-build-throttle>
		<!-- 日志统计跟踪类型。参数“ERROR”或 “INFO” -->
		<statistics-log-level>INFO</statistics-log-level>
	</proxool>
</something-else-entirely>